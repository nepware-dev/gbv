{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'what-we-do-container',
    'container',
    'col-12 col-sm-8 offset-md-2',
  ]
%}
{%
    set contentClasses = [
        'content',
        'row',
        'what-we-do-row',
    ]
%}
<div class="what-we-do">
  <div{{ attributes.addClass(classes) }} id="coordination-level" data-title="{{label}}">
    {{ title_prefix }}
    {% if label %}
      <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
      <div{{ content_attributes.addClass(contentClasses) }}>
        <div class="col-sm-6">
          <h2>{{ content.field_what_we_do_heading.0['#context'].value }} </h2>
          {{content.body}}
        </div>
        <div class="col-sm-6">
          {% set alt_text = content.field_image_media[0]['#media'].thumbnail[0].alt %}
          {% set image_url = media_file_url(content.field_image_media[0]['#media'].mid[0].value) %}
          <img src="{{image_url}}" alt="{{alt_text}}" class="what-we-do-image" />
        </div>
      </div>
    {% endblock %}
  </div>
</div>