
{%
  set classes = [
    'block',
    'tools-resources',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'col-sm-10 offset-md-1',
    'tools-and-resources',
  ]
%}
{%
    set contentClasses = [
        'content',
        'row',
    ]
%}
<div{{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="container coordination-tools-and-resources">
      {{ title_prefix }}
      {% if label %}
        <h2{{ title_attributes }} class="underline-h2-tag">{{ label }}</h2>
      {% endif %}
      {{ title_suffix }}
      {% block content %}
        <div{{ content_attributes.addClass(contentClasses) }}>
          {{ content }}
        </div>
      {% endblock %}
    </div>
  </div>
</div>

