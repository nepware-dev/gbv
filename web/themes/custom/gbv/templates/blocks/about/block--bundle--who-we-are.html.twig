{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'who-are-we',
    'container',
    'col-12 col-md-8 offset-md-2',
  ]
%}
{%
    set contentClasses = [
        'content',
        'row',
    ]
%}
<div{{ attributes.addClass(classes) }} id="who-we-are" data-title="{{ label }}">
  {{ title_prefix }}
  {% if label %}
    <h2{{ title_attributes }} class="underline-h2-tag">{{ label }}</h2>
  {% endif %}
  {{ title_suffix }}
  {% block content %}
    <div{{ content_attributes.addClass(contentClasses) }}>
      <div class="col-12 col-md-6">
        {{content.field_body_left}}
      </div>
      <div class="col-12 col-md-6 ">
        {% set alt_text = content.field_media_image[0]['#media'].thumbnail[0].alt %}
        {% set image_url = media_file_url(content.field_media_image[0]['#media'].mid[0].value) %}
        <img src="{{image_url}}" alt={{alt_text}} />
        {{content.field_body_right}}
      </div>
    </div>
  {% endblock %}
</div>