{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class
  ]
%}
{%
    set contentClasses = [
        'content'
    ]
%}
<div {{ attributes.addClass(classes) }}>
    <div class="row nomargin">
        <div class="col-6 nopadding">
            <div class="home-summary container">
            {{ title_prefix }}
            {% if label %}
                <h2{{ title_attributes }}>{{ label }}</h2>
            {% endif %}
            {{ title_suffix }}
            {% block content %}
                <div{{ content_attributes.addClass(contentClasses) }}>
                    <div>{{content.body}}</div>
                </div>
            {% endblock %}
            </div>
        </div>
        <div class="col-6 nopadding">
            <img src="{{file_url(content.field_image['#items'].entity.uri.value)}}" alt="intro-image" class="intro-image" />
        </div>
    </div>
</div>


