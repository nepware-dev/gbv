{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "globals": {
    "Drupal": true,
    "drupalSettings": true,
    "drupalTranslations": true,
    "domready": true,
    "jQuery": true,
    "_": true,
    "matchMedia": true,
    "Backbone": true,
    "Modernizr": true,
    "CKEDITOR": true
  },
  "rules": {
    "no-var": "error",
    "no-unused-vars": [
      "error",
            {
              "args": "none"
            }
    ],
    "eqeqeq": [
      "error",
      "always",
      {
        "null": "ignore"
      }
    ],
    "strict": "off",
    "indent": [
      "error",
            4
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "comma-style": [
      "error",
      "last"
    ],
    "key-spacing": [
      "error",
            {
              "beforeColon": false,
              "afterColon": true
            }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "comma-spacing": [
      "error",
            {
              "before": false,
              "after": true
            }
    ],
    "space-before-blocks": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": false,
        "objectsInObjects": true
      }
    ]
  }
}
